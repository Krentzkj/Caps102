             x:DataType="viewmodel:LoginAndSignupViewModel"
             x:Class="MauiBookingApp.MainPage">

    <ScrollView Padding="16">
        <VerticalStackLayout
            WidthRequest="350"
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            Spacing="16">

            <Image
                Source="habha_logo.jpg"
                HorizontalOptions="Center"
                WidthRequest="300"
                HeightRequest="300"
                Margin="0,0,0,-70" />

            <!--<Label
            Text="HaBHA"
