<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBookingApp.UploadImagetodb"
             Title="UploadImagetodb">

    <StackLayout Spacing="20" Padding="30">
        <Button Text="Upload Image" Clicked="OnUploadButtonClicked" />
        <Button Text="Fetch Image" Clicked="OnFetchImageButtonClicked" />
        <Image x:Name="MyImageControl" WidthRequest="200" HeightRequest="200" />
    </StackLayout>
</ContentPage>