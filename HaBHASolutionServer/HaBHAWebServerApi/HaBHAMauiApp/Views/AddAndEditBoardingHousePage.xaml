<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaBHAMauiApp.Views.AddAndEditBoardingHousePage"
             Title="AddAndEditBoardingHousePage">


    <VerticalStackLayout>
        <Entry x:Name="txtRoomNumber" Placeholder="Room Number"/>
        <Entry x:Name="txtRoomSize" Placeholder="Room Size"/>
        <Entry x:Name="txtPricePerMonth" Placeholder="Price"/>
        <Entry x:Name="txtDescriptions" Placeholder="Descriptions"/>
        <Entry x:Name="txtAmenities" Placeholder="Amenities"/>
        <Switch x:Name="txtIsAvailble" IsToggled="{Binding IsAvailable, Mode=TwoWay}" OnColor="White" ThumbColor="Green" />

        <Button x:Name="btnSave" Text="Save" Margin="0, 20" Clicked="btnSave_Clicked" />
        <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked" />
    </VerticalStackLayout>
</ContentPage>